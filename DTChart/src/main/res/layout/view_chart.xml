<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include layout="@layout/chart_chooseitem" />

    <include layout="@layout/chart_textitem" />

    <com.datai.common.charts.tchart.TChart
        android:id="@+id/view_chart_tchart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:visibility="visible" />

    <com.datai.common.charts.kchart.KChart
        android:id="@+id/view_chart_kchart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:visibility="gone" />
</LinearLayout>
