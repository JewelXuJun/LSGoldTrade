<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item android:top="39dp">

                <shape android:shape="rectangle">
                    <solid android:color="@color/radio_button_line_divider" />
                </shape>
            </item>
            <item android:left="15dp" android:right="15dp" android:top="39dp">

                <shape android:shape="rectangle">
                    <solid android:color="@color/radio_button_text_press" />
                </shape>

            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item android:top="39dp">

                <shape android:shape="rectangle">
                    <solid android:color="#CCCCCC" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>