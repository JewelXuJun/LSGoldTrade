<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/common_item_background" />
            <corners android:radius="@dimen/common_btn_corner" />
            <stroke android:width="1dp" android:color="@color/common_btn_border_pressed" android:dashGap="0dp" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/common_item_background" />
            <corners android:radius="@dimen/common_btn_corner" />
            <stroke android:width="1dp" android:color="@color/common_btn_border_nomral" android:dashGap="0dp" />
        </shape>
    </item>
    <item>
        <shape android:state_enabled="false">
            <solid android:color="@color/common_item_background" />
            <corners android:radius="@dimen/common_btn_corner" />
            <stroke android:width="1dp" android:color="@color/common_btn_bg_disable" android:dashGap="0dp" />
        </shape>
    </item>

</selector>