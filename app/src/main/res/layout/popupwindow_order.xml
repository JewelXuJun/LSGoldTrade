<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.jme.lsgoldtrade.ui.trade.OrderPopUpWindow.ClickHandlers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="盈亏设置"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black_deep"
                android:layout_centerInParent="true"
                />

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_close_blue"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:layout_marginRight="15dp"
                android:onClick="@{() -> handlers.onClickCancel()}"
                />

        </RelativeLayout>

        <include layout="@layout/item_line_vertical" />

        <LinearLayout
            android:id="@+id/yingkuisetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄金账号"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black_deep"
                    android:layout_marginRight="17dp"
                    />

                <TextView
                    android:id="@+id/back_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄金账号"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black_deep"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易类型"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black_deep"
                    android:layout_marginRight="17dp"
                    />

                <TextView
                    android:id="@+id/business_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="买入开仓"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black_deep"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="委托品种"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black_deep"
                    android:layout_marginRight="17dp"
                    />

                <TextView
                    android:id="@+id/business_varieties"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Au(T+D)"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black_deep"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="委托价格"
                    android:textColor="@color/black_deep"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="@dimen/common_item_height_middle"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="@dimen/common_page_margin"
                    android:background="@drawable/bg_btn_gray_hollow"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> handlers.onClickPriceMinus()}">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/ic_minus" />

                    </RelativeLayout>

                    <include layout="@layout/item_line_horizontal" />

                    <EditText
                        android:id="@+id/et_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:textColor="@color/color_blue_deep"
                        android:textColorHint="@color/color_text_hint"
                        android:textSize="@dimen/sp_16" />

                    <include layout="@layout/item_line_horizontal" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> handlers.onClickPriceAdd()}">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/ic_add" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="委托数量"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black_deep"
                    />

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="@dimen/common_item_height_middle"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="@dimen/common_page_margin"
                    android:background="@drawable/bg_btn_gray_hollow"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> handlers.onClickAmountMinus()}">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/ic_minus" />

                    </RelativeLayout>

                    <include layout="@layout/item_line_horizontal" />

                    <EditText
                        android:id="@+id/et_amount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:textColor="@color/color_blue_deep"
                        android:textColorHint="@color/color_text_hint"
                        android:textSize="@dimen/sp_16" />

                    <include layout="@layout/item_line_horizontal" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> handlers.onClickAmountAdd()}">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/ic_add" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_item_normal"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="@{() -> handlers.onClickCancel()}"
                android:text="@string/text_cancel"
                android:textColor="@color/black_deep"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_blue"
                android:text="修改"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

    </LinearLayout>

</layout>
