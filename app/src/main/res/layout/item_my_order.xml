<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp"
        >

        <TextView
            android:id="@+id/pingzhong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="mAu(T+D)"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_text_normal"
            />

        <TextView
            android:id="@+id/fangxiang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="多"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_text_normal"
            android:layout_alignTop="@id/pingzhong"
            android:layout_toRightOf="@id/pingzhong"
            android:paddingLeft="3dp"
            />

        <TextView
            android:id="@+id/num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_text_normal"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/chedan"
                android:layout_width="44dp"
                android:layout_height="30dp"
                android:text="撤单"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg_btn_blue_solid"
                android:layout_marginLeft="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/details"
                android:layout_width="44dp"
                android:layout_height="30dp"
                android:text="详情"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg_btn_blue_solid"
                />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019/0301 17:17:17"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_ccc"
            />

        <TextView
            android:id="@+id/status"
            android:layout_width="44dp"
            android:layout_height="30dp"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

</LinearLayout>