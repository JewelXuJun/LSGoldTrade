<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <include layout="@layout/item_line_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_head_portrait"
            android:paddingTop="@dimen/common_area_margin_big"
            android:paddingRight="@dimen/margin_head_portrait"
            android:paddingBottom="@dimen/common_area_margin">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/color_text_normal"
                android:textSize="@dimen/common_font_size" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_area_margin_tiny"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <include layout="@layout/item_line_vertical" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/common_area_margin"
            android:textColor="@color/black_deep"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/layout_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/common_area_margin"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/news_question"
                android:textColor="@color/black_deep"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_deep"
                android:layout_marginTop="@dimen/margin_tiny"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/news_answer"
                android:layout_marginTop="@dimen/common_area_margin"
                android:textColor="@color/black_deep"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_deep"
                android:layout_marginTop="@dimen/margin_tiny"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

    </LinearLayout>

</layout>
