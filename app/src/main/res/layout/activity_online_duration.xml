<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.jme.lsgoldtrade.ui.security.OnlineDurationActivity.ClickHandlers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <include layout="@layout/item_line_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_normal"
                android:paddingLeft="@dimen/common_area_margin"
                android:paddingRight="@dimen/common_area_margin"
                android:onClick="@{() -> handlers.ClicDurationSeconds(2)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center|left"
                    android:text="@string/security_duration_two_minutes"
                    android:textColor="@color/color_text_normal"
                    android:textSize="@dimen/size_normal" />

                <ImageView
                    android:id="@+id/img_duration_two_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_select"
                    android:visibility="visible" />

            </RelativeLayout>

            <include layout="@layout/item_line_vertical" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_normal"
                android:paddingLeft="@dimen/common_area_margin"
                android:paddingRight="@dimen/common_area_margin"
                android:onClick="@{() -> handlers.ClicDurationSeconds(30)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center|left"
                    android:text="@string/security_duration_thirty_minutes"
                    android:textColor="@color/color_text_normal"
                    android:textSize="@dimen/size_normal" />

                <ImageView
                    android:id="@+id/img_duration_thirty_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_select"
                    android:visibility="gone" />

            </RelativeLayout>

            <include layout="@layout/item_line_vertical" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_normal"
                android:paddingLeft="@dimen/common_area_margin"
                android:paddingRight="@dimen/common_area_margin"
                android:onClick="@{() -> handlers.ClicDurationSeconds(60)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center|left"
                    android:text="@string/security_duration_one_hour"
                    android:textColor="@color/color_text_normal"
                    android:textSize="@dimen/size_normal" />

                <ImageView
                    android:id="@+id/img_duration_one_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_select"
                    android:visibility="gone" />

            </RelativeLayout>

            <include layout="@layout/item_line_vertical" />

            <RelativeLayout
                android:id="@+id/layout_network_5s"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_normal"
                android:paddingLeft="@dimen/common_area_margin"
                android:paddingRight="@dimen/common_area_margin"
                android:onClick="@{() -> handlers.ClicDurationSeconds(120)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center|left"
                    android:text="@string/security_duration_two_hour"
                    android:textColor="@color/color_text_normal"
                    android:textSize="@dimen/size_normal" />

                <ImageView
                    android:id="@+id/duration_two_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_select"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <include layout="@layout/item_line_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:lineSpacingExtra="@dimen/lineSpacingExtra_normal"
            android:padding="@dimen/common_area_margin"
            android:text="@string/security_duration_message"
            android:textColor="@color/color_text_normal"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

</layout>
