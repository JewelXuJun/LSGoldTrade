<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.jme.lsgoldtrade.ui.mainpage.FastEntryActivity.ClickHandlers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/lltitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_back"
                    android:layout_centerVertical="true"
                    android:onClick="@{() -> handlers.onClickBack()}"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快捷入口管理"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/color_000"
                    android:layout_centerInParent="true"
                    />

                <TextView
                    android:id="@+id/tvbw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/color_0080ff"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:onClick="@{() -> handlers.onClickBw()}"
                    />

            </RelativeLayout>

            <include layout="@layout/item_line_vertical" />

        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已添加的快捷入口"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_333"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewYes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未添加的快捷入口"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_333"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</layout>
