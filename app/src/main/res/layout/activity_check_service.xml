<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.jme.lsgoldtrade.ui.personal.CheckServiceActivity.ClickHandlers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lltitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_toolbar" />

            <include layout="@layout/item_line_vertical" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/common_area_margin">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/increment_available_funds"
                            android:textColor="@color/black_pale"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_available_funds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_area_margin_tiny"
                            android:text="@string/text_no_data_default"
                            android:textColor="@color/color_red"
                            android:textSize="@dimen/common_font_size_big" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/increment_frozen_funds"
                            android:textColor="@color/black_pale"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_frozen_funds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_area_margin_tiny"
                            android:text="@string/text_no_data_default"
                            android:textColor="@color/color_blue_deep"
                            android:textSize="@dimen/common_font_size_big" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="20dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn"
                        android:onClick="@{() -> handlers.onClickRecharge()}"
                        android:text="@string/increment_recharge"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_normal" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn"
                        android:onClick="@{() -> handlers.onClickWithdraw()}"
                        android:text="@string/increment_withdrawal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_normal" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn"
                        android:onClick="@{() -> handlers.onClickThaw()}"
                        android:text="@string/increment_thaw"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_normal" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_btn"
                        android:onClick="@{() -> handlers.onClickDetailed()}"
                        android:text="@string/increment_account_detail"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_normal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_not_signed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_area_margin_tiny"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/common_area_margin"
                    android:paddingTop="@dimen/common_page_padding"
                    android:paddingRight="@dimen/common_area_margin"
                    android:paddingBottom="@dimen/common_page_padding"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small_middle"
                        android:background="@mipmap/ic_message" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_middle"
                        android:lineSpacingExtra="@dimen/lineSpacingExtra_small"
                        android:text="@string/increment_not_signed_message"
                        android:textColor="@color/color_message_red"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_signed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_area_margin_tiny"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_order_item"
                        android:onClick="@{() -> handlers.onClickBankCard()}"
                        android:paddingLeft="@dimen/margin_normal"
                        android:paddingRight="@dimen/common_area_margin">

                        <TextView
                            android:id="@+id/tv_bankcard_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/increment_bankcard"
                            android:textColor="@color/color_text_normal"
                            android:textSize="@dimen/size_normal" />

                        <ImageView
                            android:id="@+id/img_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/ic_next" />

                        <TextView
                            android:id="@+id/tv_bankcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/common_area_margin_large"
                            android:layout_marginRight="@dimen/common_area_margin"
                            android:layout_toLeftOf="@+id/img_next"
                            android:layout_toRightOf="@+id/tv_bankcard_title"
                            android:paddingLeft="@dimen/common_page_padding"
                            android:text="6228****3456"
                            android:textColor="@color/black_deep"
                            android:textSize="@dimen/common_font_size" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_order_item"
                        android:paddingLeft="@dimen/margin_normal"
                        android:paddingRight="@dimen/common_area_margin">

                        <LinearLayout
                            android:id="@+id/layout_money_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/increment_money_pay"
                                android:textColor="@color/color_text_normal"
                                android:textSize="@dimen/size_normal" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="@{() -> handlers.onClickPaidPrompt()}"
                                android:padding="@dimen/common_area_margin_tiny">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/ic_prompt" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_pay"
                            android:layout_width="@dimen/width_item_middle"
                            android:layout_height="@dimen/common_item_height_small"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_btn_blue_solid"
                            android:gravity="center"
                            android:onClick="@{() -> handlers.onClickPay()}"
                            android:text="@string/increment_recharge_pay"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/common_page_margin"
                            android:layout_marginRight="@dimen/common_area_margin"
                            android:layout_toLeftOf="@+id/tv_pay"
                            android:layout_toRightOf="@+id/layout_money_pay"
                            android:paddingLeft="@dimen/common_area_margin_tiny"
                            android:text="1988.88"
                            android:textColor="@color/black_deep"
                            android:textSize="@dimen/common_font_size" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_increment_item"
                    android:layout_marginTop="@dimen/common_area_margin_tiny"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_normal"
                    android:paddingRight="@dimen/common_area_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_box" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_area_margin_big"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/trading_box_title"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_normal"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_area_margin_tiny"
                            android:text="@string/increment_trading_box_message"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="@dimen/width_item_middle"
                        android:layout_height="@dimen/common_item_height_small"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_btn_blue_stroke"
                        android:gravity="center"
                        android:onClick="@{() -> handlers.onClickTradingBox()}"
                        android:text="@string/increment_use"
                        android:textColor="@color/color_blue_deep"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <include layout="@layout/item_line_vertical_margin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_increment_item"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_normal"
                    android:paddingRight="@dimen/common_area_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_entrust_risk" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_area_margin_big"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transaction_entrust_risk_management"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_normal"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/increment_entrust_risk_message"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="@dimen/width_item_middle"
                        android:layout_height="@dimen/common_item_height_small"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_btn_blue_stroke"
                        android:gravity="center"
                        android:onClick="@{() -> handlers.onClickEntrust()}"
                        android:text="@string/increment_use"
                        android:textColor="@color/color_blue_deep"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_increment_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_normal"
                    android:paddingRight="@dimen/common_area_margin"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/increment_strategy"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/increment_strategy_message"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="@dimen/width_item_middle"
                        android:layout_height="@dimen/common_item_height_small"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_btn_blue_stroke"
                        android:gravity="center"
                        android:onClick="@{() -> handlers.onClickService()}"
                        android:text="@string/increment_use"
                        android:textColor="@color/color_blue_deep"
                        android:textSize="@dimen/common_font_size" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>
