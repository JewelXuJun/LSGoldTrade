<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.jme.lsgoldtrade.ui.tradingbox.TradingBoxFragment.ClickHandlers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_background"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="173dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@mipmap/xiazibeijing" />

                    <TextView
                        android:id="@+id/trading_chance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="交易机会"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/trading_chance"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_translate"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="美联储"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_font_size" />

                    <TextView
                        android:id="@+id/k_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="Au(T+D) 多"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_font_size" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/k_line"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="23dp"
                        android:text="发布时间2019/3/12"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:drawableLeft="@drawable/drawleft_blue"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="分析师观点"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <include layout="@layout/item_line_vertical" />

                <TextView
                    android:id="@+id/tvAnalyst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text=""
                    android:textColor="@color/color_text_normal"
                    android:textSize="@dimen/sp_14" />

                <include layout="@layout/item_line_5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:drawableLeft="@drawable/drawleft_blue"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="投机情绪"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:id="@+id/touji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:onClick="@{() -> handlers.onClickTouji()}"
                        android:src="@mipmap/tanhuang" />

                </LinearLayout>

                <include layout="@layout/item_line_vertical" />

                <ImageView
                    android:id="@+id/tvSpeculativeSentiment"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:scaleType="centerCrop" />

                <include layout="@layout/item_line_5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:drawableLeft="@drawable/drawleft_blue"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="黄金ETF报告"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:id="@+id/baogao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:onClick="@{() -> handlers.onClickBaogao()}"
                        android:src="@mipmap/tanhuang" />

                </LinearLayout>

                <include layout="@layout/item_line_vertical" />

                <ImageView
                    android:id="@+id/glodetf"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:text="以上内容及建议，仅供参考，据此操作盈亏自负。"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</layout>