<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.jme.lsgoldtrade.ui.tradingbox.TradingBoxFragment.ClickHandlers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="173dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/xiazibeijing"
                            />

                        <TextView
                            android:id="@+id/trading_chance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="交易机会"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            />

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="美联储"
                            android:textSize="@dimen/common_font_size"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_below="@id/trading_chance"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/bg_translate"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            />

                        <TextView
                            android:id="@+id/k_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Au(T+D) 多"
                            android:textSize="@dimen/common_font_size"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:layout_below="@+id/title"
                            />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发布时间2019/3/12"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="23dp"
                            android:layout_below="@+id/k_line"
                            />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="分析师观点"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/drawleft_blue"
                        android:drawablePadding="5dp"
                        android:paddingLeft="15dp"
                        />

                    <include layout="@layout/item_line_vertical" />

                    <TextView
                        android:id="@+id/tvAnalyst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_text_normal"
                        android:padding="15dp"
                        />

                    <include layout="@layout/item_line_5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:text="投机情绪"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:drawableLeft="@drawable/drawleft_blue"
                            android:drawablePadding="5dp"
                            android:paddingLeft="15dp"
                            />

                        <ImageView
                            android:id="@+id/touji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/tanhuang"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:onClick="@{() -> handlers.onClickTouji()}"
                            />

                    </LinearLayout>

                    <include layout="@layout/item_line_vertical" />

                    <ImageView
                        android:id="@+id/tvSpeculativeSentiment"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:scaleType="centerCrop"
                        />

                    <include layout="@layout/item_line_5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:text="黄金ETF报告"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:drawableLeft="@drawable/drawleft_blue"
                            android:drawablePadding="5dp"
                            android:paddingLeft="15dp"
                            />

                        <ImageView
                            android:id="@+id/baogao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/tanhuang"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:onClick="@{() -> handlers.onClickBaogao()}"
                            />

                    </LinearLayout>

                    <include layout="@layout/item_line_vertical" />

                    <ImageView
                        android:id="@+id/glodetf"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:text="以上内容及建议，仅供参考，据此操作盈亏自负。"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/gray"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_horizontal"
                        />

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </RelativeLayout>

    </LinearLayout>

</layout>