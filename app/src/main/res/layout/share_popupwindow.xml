<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingTop="30dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:id="@+id/iv_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="微信"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/gray"
                android:gravity="center"
                android:drawablePadding="5dp"
                />

            <!--android:drawableTop="@drawable/wechat"-->

            <TextView
                android:id="@+id/iv_wechat_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="朋友圈"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/gray"
                android:gravity="center"
                android:drawablePadding="5dp"
                />

            <!--android:drawableTop="@drawable/wechat_friend"-->


            <TextView
                android:id="@+id/iv_sina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="微博"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/gray"
                android:gravity="center"
                android:drawablePadding="5dp"
                />

            <!--android:drawableTop="@drawable/weibo"-->


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_bg_img"
            />

        <TextView
            android:id="@+id/iv_cancel_share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/gray"
            android:gravity="center"
            />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

</RelativeLayout>