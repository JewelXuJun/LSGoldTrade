<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>

        <variable
            name="handlers"
            type="com.jme.lsgoldtrade.ui.login.LoginPwdActivity.ClickHandlers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <include layout="@layout/item_line_vertical" />

        <LinearLayout
            android:id="@+id/setpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_login"
            android:layout_marginTop="@dimen/common_area_margin"
            android:layout_marginRight="@dimen/margin_login"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/common_area_margin_middle"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置登录密码"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_4d4d4d"
                    android:layout_gravity="center_vertical"
                    />

                <com.jme.common.ui.view.ClearEditText
                    android:id="@+id/newpwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="@dimen/common_area_margin"
                    android:layout_marginRight="@dimen/common_page_margin"
                    android:layout_marginBottom="@dimen/common_area_margin_middle"
                    android:layout_toLeftOf="@+id/layout_img"
                    android:background="@null"
                    android:hint="请输入6-18位数字字母组合密码"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/common_page_padding"
                    android:textColor="@color/color_text_normal"
                    android:textColorHint="@color/color_text_hint"
                    android:textSize="@dimen/size_normal" />

            </LinearLayout>

            <include layout="@layout/item_line_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/common_area_margin_middle"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="再次输入密码"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_4d4d4d"
                    android:layout_gravity="center_vertical"
                    />

                <com.jme.common.ui.view.ClearEditText
                    android:id="@+id/surepwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="@dimen/common_area_margin"
                    android:layout_marginRight="@dimen/common_page_margin"
                    android:layout_marginBottom="@dimen/common_area_margin_middle"
                    android:layout_toLeftOf="@+id/layout_img"
                    android:background="@null"
                    android:hint="请再次输入您的密码"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/common_page_padding"
                    android:textColor="@color/color_text_normal"
                    android:textColorHint="@color/color_text_hint"
                    android:textSize="@dimen/size_normal" />

            </LinearLayout>

            <include layout="@layout/item_line_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_login_btn"
                android:layout_marginTop="@dimen/margin_main_page_info"
                android:background="@drawable/selector_btn"
                android:onClick="@{() -> handlers.onClickLoginPwd()}"
                android:text="提 交"
                android:textColor="@color/white"
                android:textSize="@dimen/common_font_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pwdsuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/common_area_margin_big"
                android:background="@mipmap/register_success"
                />

            <TextView
                android:id="@+id/business_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/color_000"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_login_btn"
                android:layout_marginTop="@dimen/margin_main_page_info"
                android:background="@drawable/bg_btn_blue_solid"
                android:text="前往交易"
                android:textColor="@color/white"
                android:textSize="@dimen/common_font_size"
                android:onClick="@{() -> handlers.onClickPwdSuccess()}"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                />

        </LinearLayout>

    </LinearLayout>

</layout>
