<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_yujing_white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Au(T+D)"
            android:textSize="@dimen/sp_27"
            android:textColor="@color/color_4d4d4d"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="32dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前价格"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_000"
                />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="323.62"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/color_ff3300"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <TextView
        android:id="@+id/upPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提醒:上限280.00"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="查看详情"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999"
            android:lineSpacingExtra="6dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/ikown"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="我知道了"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/drawable_blue_solid"
            />

    </LinearLayout>

</LinearLayout>
