<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_buy_item"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical"
                android:paddingLeft="@dimen/common_area_margin">

                <TextView
                    android:id="@+id/tv_contract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_no_data_default"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/size_middle" />

                <TextView
                    android:id="@+id/tv_pupil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_area_margin_tiny"
                    android:text="@string/text_no_data_default"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/size_middle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:orientation="vertical"
                android:paddingRight="@dimen/common_area_margin_big">

                <TextView
                    android:id="@+id/tv_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_no_data_default"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/size_middle" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_area_margin_tiny"
                    android:text="@string/text_no_data_default"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/size_middle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:orientation="vertical"
                android:paddingRight="@dimen/common_area_margin">

                <TextView
                    android:id="@+id/tv_average_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/common_page_padding"
                    android:text="@string/text_no_data_default"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/size_middle" />

                <TextView
                    android:id="@+id/tv_profit_loss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_area_margin_tiny"
                    android:text="@string/text_no_data_default"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/size_middle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:orientation="vertical"
                android:paddingRight="@dimen/common_area_margin">

                <Button
                    android:id="@+id/btn_evening_up"
                    android:layout_width="@dimen/common_item_height_middle"
                    android:layout_height="@dimen/height_order_btn"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_btn_blue_solid"
                    android:gravity="center"
                    android:text="@string/trade_evening_up"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/item_line_vertical" />

    </LinearLayout>

</LinearLayout>
