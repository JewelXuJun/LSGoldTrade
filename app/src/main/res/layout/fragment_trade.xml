<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handlers"
            type="com.jme.lsgoldtrade.ui.trade.TradeFragment.ClickHandlers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_toolbar_blue"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/main_trade"
                android:textColor="@color/white"
                android:textSize="@dimen/common_font_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="@{() -> handlers.onClickNews()}"
                android:orientation="horizontal"
                android:padding="@dimen/common_page_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_news_white" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_no_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_top_pic"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/trading_no_login"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/btn_kaihu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_login_btn"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="@dimen/margin_main_page_info"
                android:layout_marginRight="35dp"
                android:background="@drawable/bg_btn_blue_solid"
                android:onClick="@{() -> handlers.onClickKaiHu()}"
                android:text="免费开户"
                android:textColor="@color/white"
                android:textSize="@dimen/common_font_size" />

            <TextView
                android:id="@+id/kaihujiaocheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:onClick="@{() -> handlers.onClickKaiHuJiaoCheng()}"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/bangding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/bg_btn_blue_stroke"
                android:gravity="center"
                android:onClick="@{() -> handlers.onClickBangDing()}"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="已有黄金账号，去绑定"
                android:textColor="@color/color_0080ff"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_item_height_middle"
                android:background="@color/white"
                app:tabIndicatorColor="@color/color_blue"
                app:tabSelectedTextColor="@color/color_toolbar_blue"
                app:tabTextColor="@color/color_text_normal" />

            <include layout="@layout/item_line_vertical" />

            <android.support.v4.view.ViewPager
                android:id="@+id/tab_viewpager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</layout>
