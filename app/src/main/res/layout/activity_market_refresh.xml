<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.jme.lsgoldtrade.ui.personal.MarketRefreshActivity.ClickHandlers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <include layout="@layout/item_line_vertical" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_area_margin"
                android:background="@color/white"
                android:orientation="vertical">

                <include layout="@layout/item_line_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_item_small"
                    android:background="@color/color_tabhost"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/common_page_padding"
                    android:text="@string/setting_refresh_network"
                    android:textColor="@color/black_pale"
                    android:textSize="@dimen/sp_12" />

                <include layout="@layout/item_line_vertical" />

                <RelativeLayout
                    android:id="@+id/layout_network_5s"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_item_normal"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="@{() -> handlers.ClickNetWorkSeconds(5)}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/common_page_margin"
                        android:gravity="center|left"
                        android:text="@string/setting_refresh_5s"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/img_network_5s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/common_page_margin"
                        android:visibility="gone" />

                </RelativeLayout>

                <include layout="@layout/item_line_vertical_margin" />

                <RelativeLayout
                    android:id="@+id/layout_network_10s"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_item_normal"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="@{() -> handlers.ClickNetWorkSeconds(10)}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/common_page_margin"
                        android:gravity="center|left"
                        android:text="@string/setting_refresh_10s"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/img_network_10s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/common_page_margin"
                        android:visibility="gone" />

                </RelativeLayout>

                <include layout="@layout/item_line_vertical_margin" />

                <RelativeLayout
                    android:id="@+id/layout_network_15s"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_item_normal"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="@{() -> handlers.ClickNetWorkSeconds(15)}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/common_page_margin"
                        android:gravity="center|left"
                        android:text="@string/setting_refresh_15s"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/img_network_15s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/common_page_margin"
                        android:visibility="gone" />

                </RelativeLayout>

                <include layout="@layout/item_line_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_item_small"
                    android:background="@color/color_tabhost"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/common_page_padding"
                    android:text="@string/setting_refresh_wifi"
                    android:textColor="@color/black_pale"
                    android:textSize="@dimen/sp_12" />

                <include layout="@layout/item_line_vertical" />

                <RelativeLayout
                    android:id="@+id/layout_wifi_1s"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_item_normal"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="@{() -> handlers.ClickWiFiSeconds(1)}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/common_page_margin"
                        android:gravity="center|left"
                        android:text="@string/setting_refresh_1s"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/img_wifi_1s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/common_page_margin"
                        android:visibility="gone" />

                </RelativeLayout>

                <include layout="@layout/item_line_vertical_margin" />

                <RelativeLayout
                    android:id="@+id/layout_wifi_2s"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_item_normal"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="@{() -> handlers.ClickWiFiSeconds(2)}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/common_page_margin"
                        android:gravity="center|left"
                        android:text="@string/setting_refresh_2s"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/img_wifi_2s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/common_page_margin"
                        android:visibility="gone" />

                </RelativeLayout>

                <include layout="@layout/item_line_vertical_margin" />

                <RelativeLayout
                    android:id="@+id/layout_wifi_5s"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_item_normal"
                    android:background="?android:attr/selectableItemBackground"
                    android:onClick="@{() -> handlers.ClickWiFiSeconds(5)}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/common_page_margin"
                        android:gravity="center|left"
                        android:text="@string/setting_refresh_5s"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/img_wifi_5s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/common_page_margin"
                        android:visibility="gone" />

                </RelativeLayout>

                <include layout="@layout/item_line_vertical" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</layout>