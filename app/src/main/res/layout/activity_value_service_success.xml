<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.jme.lsgoldtrade.ui.personal.ValueServiceSuccessActivity.ClickHandlers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/lltitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <include layout="@layout/layout_toolbar" />

            <include layout="@layout/item_line_vertical" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/common_area_margin_big"
            android:background="@mipmap/register_success"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开通成功!"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/btn_kaihu"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_blue_solid"
                android:text="去充值"
                android:textColor="@color/white"
                android:textSize="@dimen/common_font_size"
                android:onClick="@{() -> handlers.onClickChongZhi()}"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/bangding"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="查看我的服务"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/color_blue_deep"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bg_btn_blue_stroke"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:onClick="@{() -> handlers.onClickCheckService()}"
                />

        </LinearLayout>

    </LinearLayout>

</layout>
