<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.jme.lsgoldtrade.ui.trade.MoneyOutFragment.ClickHandlers" />

    </data>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_background"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height_big"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/common_area_margin"
                    android:paddingRight="@dimen/common_area_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/common_page_margin"
                        android:layout_toLeftOf="@+id/tv_money_max_out_unit"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/trade_money_out_max"
                            android:textColor="@color/color_text_normal"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_money_out_max"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_page_margin"
                            android:textColor="@color/color_text_normal"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_money_max_out_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@string/text_money_unit"
                        android:textColor="@color/color_text_normal"
                        android:textSize="@dimen/sp_14" />

                </RelativeLayout>

                <include layout="@layout/item_line_vertical_margin" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height_big"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/common_area_margin"
                    android:paddingRight="@dimen/common_area_margin">

                    <TextView
                        android:id="@+id/tv_transfer_amount_title"
                        android:layout_width="@dimen/width_item_title"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/trade_transfer_amount"
                        android:textColor="@color/color_text_normal"
                        android:textSize="@dimen/sp_14" />

                    <Button
                        android:id="@+id/btn_out_all"
                        android:layout_width="@dimen/width_btn_normal"
                        android:layout_height="@dimen/common_item_height_middle"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_blue"
                        android:onClick="@{() -> handlers.onClickOutAll()}"
                        android:text="@string/trade_out_all"
                        android:textColor="@drawable/selector_text"
                        android:textSize="@dimen/sp_14" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_page_margin"
                        android:layout_marginRight="@dimen/common_page_margin"
                        android:layout_toLeftOf="@+id/btn_out_all"
                        android:layout_toRightOf="@+id/tv_transfer_amount_title">

                        <EditText
                            android:id="@+id/et_transfer_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/common_page_margin"
                            android:layout_toLeftOf="@+id/tv_transfer_amount_unit"
                            android:background="@null"
                            android:hint="@string/trade_transfer_amount_hint"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:textColor="@color/color_text_normal"
                            android:textColorHint="@color/color_text_gray_hint"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_transfer_amount_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="@string/text_money_unit"
                            android:textColor="@color/color_text_normal"
                            android:textSize="@dimen/sp_14" />

                    </RelativeLayout>

                </RelativeLayout>

                <include layout="@layout/item_line_vertical_margin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height_big"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/common_area_margin"
                    android:paddingRight="@dimen/common_area_margin">

                    <TextView
                        android:layout_width="@dimen/width_item_title"
                        android:layout_height="wrap_content"
                        android:text="@string/trade_mobile_number"
                        android:textColor="@color/color_text_normal"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_mobile_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_page_margin"
                        android:textColor="@color/color_text_black"
                        android:textSize="@dimen/common_font_size" />

                </LinearLayout>

                <include layout="@layout/item_line_vertical_margin" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height_big"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/common_area_margin"
                    android:paddingRight="@dimen/common_area_margin">

                    <TextView
                        android:id="@+id/tv_verification_code"
                        android:layout_width="@dimen/width_item_title"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/trade_verification_code"
                        android:textColor="@color/color_text_normal"
                        android:textSize="@dimen/sp_14" />

                    <Button
                        android:id="@+id/btn_verification_code"
                        android:layout_width="@dimen/width_btn_normal"
                        android:layout_height="@dimen/common_item_height_middle"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_blue"
                        android:onClick="@{() -> handlers.onClickGetVerificationCode()}"
                        android:text="@string/trade_get_verification_code"
                        android:textColor="@drawable/selector_text"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_verification_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_page_margin"
                        android:layout_marginRight="@dimen/common_page_margin"
                        android:layout_toLeftOf="@+id/btn_verification_code"
                        android:layout_toRightOf="@+id/tv_verification_code"
                        android:background="@null"
                        android:hint="@string/trade_verification_code_hint"
                        android:inputType="number"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:textColor="@color/color_text_normal"
                        android:textColorHint="@color/color_text_gray_hint"
                        android:textSize="@dimen/sp_14" />

                </RelativeLayout>

                <include layout="@layout/item_line_vertical_margin" />

                <LinearLayout
                    android:id="@+id/layout_img_verify_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_item_height_big"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/common_area_margin"
                        android:paddingRight="@dimen/common_area_margin">

                        <TextView
                            android:id="@+id/tv_img_verification_code"
                            android:layout_width="@dimen/width_item_title"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/trade_img_verify_code"
                            android:textColor="@color/color_text_normal"
                            android:textSize="@dimen/sp_14" />

                        <RelativeLayout
                            android:id="@+id/layout_img"
                            android:layout_width="@dimen/width_login_verification_code"
                            android:layout_height="@dimen/common_item_height_middle"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:onClick="@{() -> handlers.onClickLoadImageVerifyCode()}">

                            <ImageView
                                android:id="@+id/img_verify_code"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:padding="@dimen/common_area_margin_tiny" />

                        </RelativeLayout>

                        <EditText
                            android:id="@+id/et_img_verify_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/common_page_margin"
                            android:layout_marginRight="@dimen/common_page_margin"
                            android:layout_toLeftOf="@+id/layout_img"
                            android:layout_toRightOf="@+id/tv_img_verification_code"
                            android:background="@null"
                            android:hint="@string/login_img_verify_code_error"
                            android:inputType="none"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:textColor="@color/color_text_normal"
                            android:textColorHint="@color/color_text_gray_hint"
                            android:textSize="@dimen/sp_14" />

                    </RelativeLayout>

                    <include layout="@layout/item_line_vertical_margin" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/common_area_margin"
                    android:text="@string/trade_money_out_time"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_12" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_btn"
                    android:layout_marginLeft="@dimen/common_area_margin"
                    android:layout_marginTop="@dimen/common_area_margin_large"
                    android:layout_marginRight="@dimen/common_area_margin"
                    android:background="@drawable/selector_btn"
                    android:enabled="false"
                    android:onClick="@{() -> handlers.onClickSubmit()}"
                    android:text="@string/text_submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_font_size" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</layout>
