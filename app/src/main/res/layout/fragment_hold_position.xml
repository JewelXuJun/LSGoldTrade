<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.jme.lsgoldtrade.ui.trade.HoldPositionFragment.ClickHandlers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background"
        android:orientation="vertical">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_trade_hold_position_account_total"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/common_page_padding">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/trade_total_equity"
                                android:textColor="@color/black_pale"
                                android:textSize="@dimen/sp_12" />

                            <RelativeLayout
                                android:layout_width="@dimen/width_trade_hold_position_account_item"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="@string/trade_risk_rate"
                                    android:textColor="@color/black_pale"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:id="@+id/tv_risk_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:text="@string/text_no_data_default"
                                    android:textColor="@color/color_orange"
                                    android:textSize="@dimen/size_normal" />

                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_area_margin_middle">

                            <TextView
                                android:id="@+id/tv_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/text_no_data_default"
                                android:textColor="@color/common_font_increase"
                                android:textSize="@dimen/size_large" />

                            <Button
                                android:layout_width="@dimen/width_trade_hold_position_account_item"
                                android:layout_height="@dimen/common_item_height_middle"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:onClick="@{() -> handlers.onClickCapitalTransfer()}"
                                android:background="@drawable/selector_blue"
                                android:text="@string/trade_capital_transfer"
                                android:textColor="@drawable/selector_text" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_trade_hold_position_account_detail"
                        android:layout_marginTop="@dimen/common_area_margin_tiny"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/common_page_padding"
                        android:paddingRight="@dimen/common_page_padding">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/trade_available_funds"
                                    android:textColor="@color/black_pale"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:id="@+id/tv_available_funds"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/common_area_margin_tiny"
                                    android:text="@string/text_no_data_default"
                                    android:textColor="@color/black_deep"
                                    android:textSize="@dimen/common_font_size_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/common_page_padding">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/trade_desirable_capital"
                                    android:textColor="@color/black_pale"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:id="@+id/tv_desirable_capital"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/common_area_margin_tiny"
                                    android:text="@string/text_no_data_default"
                                    android:textColor="@color/black_deep"
                                    android:textSize="@dimen/common_font_size_content" />

                            </LinearLayout>

                        </LinearLayout>

                        <include layout="@layout/item_line_vertical" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/trade_market_capitalization"
                                    android:textColor="@color/black_pale"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:id="@+id/tv_market_capitalization"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/common_area_margin_tiny"
                                    android:text="@string/text_no_data_default"
                                    android:textColor="@color/black_deep"
                                    android:textSize="@dimen/common_font_size_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/common_page_padding">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/trade_floating"
                                    android:textColor="@color/black_pale"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:id="@+id/tv_floating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/common_area_margin_tiny"
                                    android:text="@string/text_no_data_default"
                                    android:textColor="@color/black_deep"
                                    android:textSize="@dimen/common_font_size_content" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_page_margin"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_tabhost"
                            android:background="@color/color_trade_tabhost">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:paddingLeft="@dimen/common_page_padding"
                                android:text="@string/trade_contract_pupil"
                                android:textColor="@color/black_pale"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/trade_available_hold_position"
                                android:textColor="@color/black_pale"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/trade_average_opening_price"
                                android:textColor="@color/black_pale"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center|right"
                                android:paddingRight="@dimen/common_page_padding"
                                android:text="@string/trade_floating_rate"
                                android:textColor="@color/black_pale"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cacheColorHint="@null"
                            android:scrollbars="none" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>

</layout>