<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.jme.lsgoldtrade.ui.personal.RechargeActivity.ClickHandlers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/lltitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <include layout="@layout/layout_toolbar" />

            <include layout="@layout/item_line_vertical" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_img_verify_code"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/common_area_margin_middle"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前账户余额"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_text_normal"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/banlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前账户余额"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_text_normal"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                />

        </LinearLayout>

        <include layout="@layout/item_line_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/common_area_margin_middle"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入充值金额"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_text_normal"
                android:layout_gravity="center_vertical"
                />

            <com.jme.common.ui.view.ClearEditText
                android:id="@+id/et_gold_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="请输入充值金额"
                android:inputType="none"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:textColor="@color/color_text_normal"
                android:textColorHint="@color/color_text_hint"
                android:textSize="@dimen/size_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_text_normal"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <include layout="@layout/item_line_vertical" />

        <Button
            android:id="@+id/btn_bind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_login_btn"
            android:background="@drawable/selector_btn"
            android:onClick="@{() -> handlers.onClickPay()}"
            android:text="去支付"
            android:textColor="@color/white"
            android:textSize="@dimen/common_font_size"
            android:layout_margin="10dp"
            />

    </LinearLayout>

</layout>
