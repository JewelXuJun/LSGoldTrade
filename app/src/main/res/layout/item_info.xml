<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_page_padding"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/width_item_bigger"
            android:layout_height="@dimen/height_item_normal"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/common_page_margin"
            android:layout_marginRight="@dimen/margin_main_page_info"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_text_normal"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_area_margin_middle"
                android:maxLines="1"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_small" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_strategy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/common_page_padding"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_strategy_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_strategy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="20"
                android:textColor="@color/color_text_normal"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/img_strategy_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_tiny"
                android:background="@mipmap/ic_content_open"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_strategy_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_tiny"
                android:background="@mipmap/ic_content_close"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/item_line_vertical_list" />

</LinearLayout>
