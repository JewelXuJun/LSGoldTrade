<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_area_margin"
    android:paddingRight="@dimen/common_area_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_order_item"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_middle"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_contract"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textColor="@color/color_text_normal"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_direction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_text_normal"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:paddingRight="@dimen/common_area_margin"
                android:textColor="@color/color_text_normal"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="@dimen/common_item_height_middle"
                    android:layout_height="@dimen/height_order_btn"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_btn_blue_solid"
                    android:gravity="center"
                    android:text="@string/transaction_cancel_order"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_detail"
                    android:layout_width="@dimen/common_item_height_middle"
                    android:layout_height="@dimen/height_order_btn"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_btn_blue_solid"
                    android:gravity="center"
                    android:text="@string/trading_box_order_detail"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_area_margin_tiny">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_gray_hint"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_text_normal"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/item_line_vertical_list" />

</LinearLayout>