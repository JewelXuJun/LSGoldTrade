<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.jme.lsgoldtrade.ui.market.MarketOrderPopUpWindow.ClickHandlers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_page_padding">

            <LinearLayout
                android:id="@+id/layout_limit_down"
                android:layout_width="@dimen/width_market_limit"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_area_margin"
                android:layout_marginBottom="@dimen/common_area_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/market_limit_down"
                    android:textColor="@color/common_btn_gray_pressed"
                    android:textSize="@dimen/size_middle" />

                <TextView
                    android:id="@+id/tv_limit_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_area_margin_tiny"
                    android:text="3347"
                    android:textColor="@color/common_font_decrease"
                    android:textSize="@dimen/size_middle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/width_market_limit"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_area_margin"
                android:layout_toRightOf="@+id/layout_limit_down"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/market_limit_up"
                    android:textColor="@color/common_btn_gray_pressed"
                    android:textSize="@dimen/size_middle" />

                <TextView
                    android:id="@+id/tv_limit_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_area_margin_tiny"
                    android:text="3347"
                    android:textColor="@color/common_font_increase"
                    android:textSize="@dimen/size_middle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="@{() -> handlers.onClickCancel()}"
                android:padding="@dimen/common_page_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_cancel" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_page_margin"
            android:layout_marginRight="@dimen/common_page_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_item_height_middle"
                android:layout_marginRight="@dimen/common_area_margin_middle"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_gray_hollow"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{() -> handlers.onClickPriceMinus()}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_minus" />

                </RelativeLayout>

                <include layout="@layout/item_line_horizontal" />

                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textColor="@color/color_toolbar_blue"
                    android:textSize="@dimen/sp_16" />

                <include layout="@layout/item_line_horizontal" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{() -> handlers.onClickPriceAdd()}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_add" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_item_height_middle"
                android:layout_marginLeft="@dimen/common_area_margin_middle"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_gray_hollow"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{() -> handlers.onClickAmountMinus()}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_minus" />

                </RelativeLayout>

                <include layout="@layout/item_line_horizontal" />

                <EditText
                    android:id="@+id/et_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textColor="@color/color_toolbar_blue"
                    android:textSize="@dimen/sp_16" />

                <include layout="@layout/item_line_horizontal" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{() -> handlers.onClickAmountAdd()}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/ic_add" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radio_group_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item_height_middle"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/common_area_margin"
            android:layout_marginRight="@dimen/margin_small"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_rival_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_market_price"
                android:layout_marginRight="@dimen/margin_market_price"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_price"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="@string/market_rival_price"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="@dimen/sp_14" />

            <RadioButton
                android:id="@+id/radio_queuing_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_market_price"
                android:layout_marginRight="@dimen/margin_market_price"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_price"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="@string/market_queuing_price"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="@dimen/sp_14" />

            <RadioButton
                android:id="@+id/radio_last_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_market_price"
                android:layout_marginRight="@dimen/margin_market_price"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_price"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="@string/market_last_price"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="@dimen/sp_14" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/radio_group_amount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item_height_big"
            android:layout_marginLeft="@dimen/common_area_margin_tiny"
            android:layout_marginTop="@dimen/common_area_margin"
            android:layout_marginRight="@dimen/common_area_margin_tiny"
            android:layout_marginBottom="@dimen/common_page_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_area_margin_tiny"
                android:layout_marginRight="@dimen/common_area_margin_tiny"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_buy_more_solid"
                android:gravity="center"
                android:onClick="@{() -> handlers.onClickBuyMore()}"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_price_buy_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_no_data_default"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_area_margin_tiny"
                    android:text="@string/market_buy_more"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_area_margin_tiny"
                android:layout_marginRight="@dimen/common_area_margin_tiny"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_sale_empty_solid"
                android:gravity="center"
                android:onClick="@{() -> handlers.onClickSaleEmpty()}"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_price_sale_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_no_data_default"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_area_margin_tiny"
                    android:text="@string/market_sale_empty"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_area_margin_tiny"
                android:layout_marginRight="@dimen/common_area_margin_tiny"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_equal_more_solid"
                android:gravity="center"
                android:onClick="@{() -> handlers.onClickEqualMore()}"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_equal_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_no_data_default"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_area_margin_tiny"
                    android:text="@string/market_equal_more"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_area_margin_tiny"
                android:layout_marginRight="@dimen/common_area_margin_tiny"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_equal_empty_solid"
                android:gravity="center"
                android:onClick="@{() -> handlers.onClickEqualEmpty()}"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_equal_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_no_data_default"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_area_margin_tiny"
                    android:text="@string/market_equal_empty"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_normal" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>
